<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFFFFF"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="323dp"
        android:layout_height="196dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="442dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/answrbt1"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:backgroundTint="@color/design_default_color_error"
            android:foregroundTint="#009E0909"
            android:textColor="#130101"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/answrbt4"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:backgroundTint="#8BC34A"
            android:textColor="#130101"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/answrbt3"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:backgroundTint="#673AB7"
            android:textColor="#130101"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/answrbt2"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:backgroundTint="#2196F3"
            android:foregroundTint="#009E0909"
            android:textColor="#130101"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/counddownTimertxt"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="321dp"
        android:layout_marginBottom="658dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:foregroundTint="#8BC34A"
        android:text="@string/_30_s"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#070000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questiontxtv"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="33dp"
        android:text="@string/_5_2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/corectanswerstxtv"
        app:layout_constraintStart_toEndOf="@+id/counddownTimertxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/corectanswerstxtv"
        android:layout_width="81dp"
        android:layout_height="55dp"
        android:layout_marginStart="314dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:text="@string/_0_0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="197dp"
        android:backgroundTint="#3E0B0A0A"
        android:text="@string/play_again"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/Resulttxtv"
        android:layout_width="289dp"
        android:layout_height="66dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="87dp"
        android:text="@string/corect"
        android:textAlignment="center"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/playAgainButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>